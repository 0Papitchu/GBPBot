{
    "general": {
        "environment": "development",
        "log_level": "INFO",
        "log_file": "logs/gbpbot.log",
        "log_format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
        "log_date_format": "%Y-%m-%d %H:%M:%S",
        "log_rotation": "1 day",
        "log_retention": "30 days",
        "debug_mode": false,
        "data_dir": "./data"
    },
    "rpc": {
        "providers": {
            "ethereum": {
                "mainnet": [
                    "https://eth-mainnet.g.alchemy.com/v2/your-api-key",
                    "https://mainnet.infura.io/v3/your-api-key",
                    "https://rpc.ankr.com/eth"
                ],
                "goerli": [
                    "https://eth-goerli.g.alchemy.com/v2/your-api-key",
                    "https://goerli.infura.io/v3/your-api-key"
                ]
            },
            "arbitrum": {
                "mainnet": [
                    "https://arb-mainnet.g.alchemy.com/v2/your-api-key",
                    "https://arbitrum-one.public.blastapi.io"
                ],
                "goerli": [
                    "https://arb-goerli.g.alchemy.com/v2/your-api-key"
                ]
            },
            "avalanche": {
                "mainnet": [
                    "https://api.avax.network/ext/bc/C/rpc",
                    "https://avalanche-c-chain.publicnode.com",
                    "https://rpc.ankr.com/avalanche",
                    "https://avalanche.blockpi.network/v1/rpc/public",
                    "https://avax.meowrpc.com"
                ]
            }
        },
        "timeout": 10,
        "max_retries": 3,
        "retry_delay": 1,
        "max_retry_delay": 30,
        "jitter": true,
        "batch_size": 10,
        "batch_interval": 0.5
    },
    "cache": {
        "enabled": true,
        "ttl": {
            "default": 60,
            "block": 12,
            "transaction": 3600,
            "code": 86400,
            "balance": 30,
            "nonce": 10,
            "gas_price": 10,
            "token_balance": 30,
            "token_allowance": 30,
            "token_metadata": 86400
        },
        "max_size": {
            "memory": 1000,
            "disk": 10000
        },
        "disk_cache": {
            "enabled": true,
            "path": "cache",
            "max_size_mb": 100
        },
        "persistent": true,
        "storage_path": "./data/cache"
    },
    "websocket": {
        "heartbeat_interval": 30,
        "reconnect_interval": 5,
        "max_reconnect_attempts": 10,
        "max_backoff": 60,
        "ping_interval": 30,
        "ping_timeout": 10,
        "close_timeout": 5,
        "reconnect_delay": 1,
        "max_reconnect_delay": 60,
        "jitter": true,
        "max_message_size": 10485760
    },
    "anomaly_detector": {
        "enabled": true,
        "window_size": 20,
        "z_score_threshold": 3.0,
        "min_data_points": 10,
        "max_price_change_percent": 20,
        "check_interval": 1,
        "alert_cooldown": 60
    },
    "transaction": {
        "gas": {
            "max_priority_fee": 3,
            "max_fee_per_gas": 100,
            "min_priority_fee": 1,
            "priority_levels": {
                "high": {
                    "multiplier": 1.5,
                    "max_priority_fee": 5
                },
                "normal": {
                    "multiplier": 1.0,
                    "max_priority_fee": 3
                },
                "low": {
                    "multiplier": 0.8,
                    "max_priority_fee": 2
                }
            }
        },
        "confirmation": {
            "timeout": 300,
            "blocks": 2,
            "poll_interval": 5
        },
        "nonce": {
            "auto_increment": true,
            "cache_duration": 60
        }
    },
    "exchanges": {
