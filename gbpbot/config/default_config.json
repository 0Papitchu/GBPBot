                "address": "0xB31f66AA3C1e785363F0875A1B74E27b85FD66c7",
                "decimals": 18,
                "symbol": "WAVAX",
                "name": "Wrapped AVAX"
            },
            "USDC": {
                "address": "0xB97EF9Ef8734C71904D8002F8b6Bc66Dd9c48a6E",
                "decimals": 6,
                "symbol": "USDC",
                "name": "USD Coin"
            },
            "USDT": {
                "address": "0x9702230A8Ea53601f5cD2dc00fDBc13d4dF4A8c7",
                "decimals": 6,
                "symbol": "USDT",
                "name": "Tether USD"
            }
        }
    },
    "strategies": {
        "arbitrage": {
            "enabled": true,
            "min_profit_usd": 5,
            "min_profit_percent": 0.5,
            "max_slippage": 1.0,
            "gas_price_threshold": 50,
            "max_concurrent_trades": 3,
            "cooldown": 10,
            "pairs": [
                {
                    "token0": "WAVAX",
                    "token1": "USDC",
                    "dex0": "traderjoe",
                    "dex1": "pangolin"
                },
                {
                    "token0": "WAVAX",
                    "token1": "USDT",
                    "dex0": "traderjoe",
                    "dex1": "pangolin"
                }
            ]
        },
        "sniping": {
            "enabled": false,
            "min_liquidity_usd": 10000,
            "max_buy_amount_usd": 100,
            "min_tokens_percent": 0.1,
            "max_slippage": 10,
            "auto_sell": {
                "enabled": true,
                "profit_target": 100,
                "stop_loss": 20,
                "trailing_stop": 10,
                "time_limit": 3600
            },
            "token_validation": {
                "check_honeypot": true,
                "check_contract": true,
                "check_owner": true,
                "check_lp_locked": true,
                "min_lp_lock_time": 2592000
            }
        }
    }
