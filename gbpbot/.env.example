# Configuration de l'API
GBPBOT_API_KEY=your_secure_api_key_here
GBPBOT_IP_WHITELIST=127.0.0.1,::1,192.168.1.0/24
GBPBOT_ENABLE_IP_CHECK=true

# Configuration SSL/TLS
GBPBOT_SSL_CERT=/path/to/certificate.pem
GBPBOT_SSL_KEY=/path/to/private_key.pem

# Configuration de journalisation
GBPBOT_LOG_REQUESTS=true
GBPBOT_LOG_LEVEL=INFO

# Configuration du bot
GBPBOT_DEFAULT_MODE=TEST  # TEST, SIMULATION, LIVE
GBPBOT_MAX_TRADE_AMOUNT=0.1
GBPBOT_SECURE_WALLET_ADDRESS=your_secure_wallet_address_here

# Configuration des notifications
GBPBOT_ENABLE_EMAIL_ALERTS=false
GBPBOT_EMAIL_RECIPIENT=your_email@example.com
GBPBOT_SMTP_SERVER=smtp.example.com
GBPBOT_SMTP_PORT=587
GBPBOT_SMTP_USERNAME=your_username
GBPBOT_SMTP_PASSWORD=your_password 